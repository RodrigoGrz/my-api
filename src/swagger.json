{
    "openapi": "3.0.0",
    "info": {
        "title": "My API Documentation",
        "description": "This is my API",
        "version": "1.0.0",
        "contact": {
            "email": "rodrigo.gregorio1@hotmail.com"
        }
    },
    "paths": {
        "/user": {
            "post": {
                "tags": [
                    "Account"
                ],
                "summary": "Create a user",
                "description": "Create a new user",
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "name": {
                                        "type": "string"
                                    },
                                    "email": {
                                        "type": "string"
                                    },
                                    "password": {
                                        "type": "string"
                                    }
                                },
                                "example": {
                                    "name": "Name example",
                                    "email": "email@example.com",
                                    "password": "1234"
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Created"
                    },
                    "500": {
                        "description": "User already exists"
                    }
                }
            }
        },
        "/users": {
            "get": {
                "tags": [
                    "Account"
                ],
                "summary": "List all users",
                "description": "List all users",
                "responses": {
                    "200": {
                        "description": "Success",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "type": "object",
                                        "properties": {
                                            "name": {
                                                "type": "string"
                                            },
                                            "email": {
                                                "type": "string"
                                            },
                                            "avatar": {
                                                "type": "string"
                                            }
                                        },
                                        "example": {
                                            "name": "User name",
                                            "email": "user@email.com",
                                            "avatar": "default.png"
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/users?email={email}": {
            "get": {
                "tags": [
                    "Account"
                ],
                "summary": "Find a user",
                "description": "Find a user by email",
                "parameters": [
                    {
                        "name": "email",
                        "in": "path",
                        "description": "User email",
                        "required": false,
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Success"
                    }
                }
            }
        },
        "/post": {
            "post": {
                "tags": [
                    "Post"
                ],
                "summary": "Create a post",
                "description": "Create a new post",
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "title": {
                                        "type": "string"
                                    },
                                    "description": {
                                        "type": "string"
                                    },
                                    "user_id": {
                                        "type": "string"
                                    },
                                    "example": {
                                        "title": "Title example",
                                        "description": "Description example",
                                        "user_id": "User ID"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Created"
                    },
                    "500": {
                        "description": "User ID does not exists"
                    }
                }
            }
        },
        "/post/{id}": {
            "delete": {
                "tags": [
                    "Post"
                ],
                "summary": "Delete post",
                "description": "Delete a post",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "description": "Post id",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Success"
                    }
                }
            }
        }
    }
}